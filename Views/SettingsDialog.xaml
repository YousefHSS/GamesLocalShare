<Window x:Class="GamesLocalShare.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Settings"
        Height="500" Width="600"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="#FF1E1E1E"
        FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="âš™ Settings" FontSize="20" FontWeight="Bold" 
                   Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Startup Section -->
                <Border Background="#FF2D2D2D" 
                        BorderBrush="#FF3F3F3F"
                        BorderThickness="1"
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸš€ Startup" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,0,0,10"/>
                        
                        <mah:ToggleSwitch x:Name="StartWithWindowsToggle"
                                         Header="Start with Windows"
                                         IsOn="False"
                                         Margin="0,0,0,10"
                                         ToolTip="Automatically start GamesLocalShare when Windows boots">
                            <mah:ToggleSwitch.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </mah:ToggleSwitch.Resources>
                        </mah:ToggleSwitch>
                        
                        <mah:ToggleSwitch x:Name="AutoStartNetworkToggle"
                                         Header="Auto-start network on launch"
                                         IsOn="False"
                                         ToolTip="Automatically start network discovery when the app launches">
                            <mah:ToggleSwitch.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </mah:ToggleSwitch.Resources>
                        </mah:ToggleSwitch>
                    </StackPanel>
                </Border>

                <!-- Auto-Update Section -->
                <Border Background="#FF2D2D2D" 
                        BorderBrush="#FF3F3F3F"
                        BorderThickness="1"
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ”„ Auto-Update Games" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,0,0,10"/>
                        
                        <mah:ToggleSwitch x:Name="AutoUpdateGamesToggle"
                                         Header="Automatically download game updates"
                                         IsOn="False"
                                         Margin="0,0,0,10"
                                         ToolTip="Automatically download updates when available from peers">
                            <mah:ToggleSwitch.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </mah:ToggleSwitch.Resources>
                        </mah:ToggleSwitch>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Check for updates every:" VerticalAlignment="Center" 
                                       Foreground="White" Margin="0,0,10,0"/>
                            <mah:NumericUpDown x:Name="UpdateIntervalInput"
                                              Value="30"
                                              Minimum="5"
                                              Maximum="120"
                                              Interval="5"
                                              Width="80"
                                              StringFormat="0"
                                              VerticalAlignment="Center"/>
                            <TextBlock Text="minutes" VerticalAlignment="Center" 
                                       Foreground="White" Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <TextBlock Text="Note: Auto-update only works when network is active and peers are available" 
                                   FontSize="10" Foreground="#FFCCCCCC" 
                                   TextWrapping="Wrap" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Hidden Games Section -->
                <Border Background="#FF2D2D2D" 
                        BorderBrush="#FF3F3F3F"
                        BorderThickness="1"
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘ Hidden Games" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Games hidden from peers:" 
                                   Foreground="White" Margin="0,0,0,5"/>
                        
                        <Border Background="#FF1E1E1E" 
                                BorderBrush="#FF3F3F3F"
                                BorderThickness="1"
                                CornerRadius="3" Padding="10" MaxHeight="150">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="HiddenGamesList"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        SelectionMode="Single">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}" 
                                                          VerticalAlignment="Center"
                                                          Foreground="White"/>
                                                <Button Grid.Column="1" 
                                                       Content="Unhide"
                                                       Click="UnhideGame_Click"
                                                       Tag="{Binding}"
                                                       Style="{DynamicResource MahApps.Styles.Button.Square}"
                                                       Padding="5,2"
                                                       FontSize="10"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Border>
                        
                        <TextBlock x:Name="NoHiddenGamesText"
                                  Text="No games hidden" 
                                  FontSize="10" 
                                  Foreground="#FFCCCCCC" 
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                        
                        <TextBlock Text="Tip: Right-click a game in 'My Games' panel to hide it from peers" 
                                   FontSize="10" Foreground="#FFCCCCCC" 
                                   TextWrapping="Wrap" Margin="0,10,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- Other Settings Section -->
                <Border Background="#FF2D2D2D" 
                        BorderBrush="#FF3F3F3F"
                        BorderThickness="1"
                        CornerRadius="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="âš¡ Other Options" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,0,0,10"/>
                        
                        <mah:ToggleSwitch x:Name="MinimizeToTrayToggle"
                                         Header="Minimize to system tray on close"
                                         IsOn="False"
                                         ToolTip="Keep app running in system tray when window is closed">
                            <mah:ToggleSwitch.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </mah:ToggleSwitch.Resources>
                        </mah:ToggleSwitch>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" 
                    Width="100" 
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"/>
            <Button Content="Cancel" 
                    Width="100" 
                    Padding="10,5"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
