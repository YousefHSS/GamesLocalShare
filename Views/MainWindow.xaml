<mah:MetroWindow x:Class="GamesLocalShare.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:vm="clr-namespace:GamesLocalShare.ViewModels"
        mc:Ignorable="d"
        Title="Games Local Share - LAN Game Sync" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource MahApps.Brushes.Gray10}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Command="{Binding ScanLocalGamesCommand}" 
                            Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                            Padding="15,8" Margin="0,0,10,0"
                            IsEnabled="{Binding IsScanning, Converter={StaticResource InvertBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Scan Games" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding StartNetworkCommand}" 
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource InvertedBoolToVisConverter}}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Padding="15,8" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Start Network" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding StopNetworkCommand}" 
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource BoolToVis}}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Padding="15,8" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Stop Network" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Your IP: " Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                    <TextBlock Text="{Binding LocalIpAddress}" FontWeight="Bold"/>
                    <Ellipse Width="12" Height="12" Margin="15,0,5,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Gray"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsNetworkActive}" Value="True">
                                        <Setter Property="Fill" Value="LimeGreen"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding IsNetworkActive, Converter={StaticResource BoolToOnlineConverter}}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Local Games Panel -->
            <Border Grid.Column="0" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource MahApps.Brushes.Accent}" Padding="10" CornerRadius="5,5,0,0">
                        <TextBlock Text="My Games" FontSize="14" FontWeight="Bold" Foreground="White"/>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding LocalGames}" 
                             SelectedItem="{Binding SelectedLocalGame}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="2" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="Build: " Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                            <TextBlock Text="{Binding BuildId}" FontSize="11" Margin="0,0,15,0"/>
                                            <TextBlock Text="{Binding FormattedSize}" Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Loading indicator -->
                    <mah:ProgressRing Grid.Row="1" IsActive="{Binding IsScanning}" Width="50" Height="50"/>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Network Peers Panel -->
            <Border Grid.Column="2" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource MahApps.Brushes.Accent2}" Padding="10" CornerRadius="5,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Network Peers" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding NetworkPeers.Count, StringFormat=' ({0})'}" 
                                       FontSize="14" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding NetworkPeers}" 
                             SelectedItem="{Binding SelectedPeer}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="2" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="10" Height="10" Fill="LimeGreen" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="18,4,0,0">
                                            <TextBlock Text="{Binding IpAddress}" Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                            <TextBlock Text=" - " Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                            <TextBlock Text="{Binding Games.Count, StringFormat='{}{0} games'}" FontSize="11"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state -->
                    <TextBlock Grid.Row="1" 
                               Text="No peers found yet. Make sure other computers are running this app."
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="20"
                               Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                               Visibility="{Binding NetworkPeers.Count, Converter={StaticResource ZeroToVisConverter}}"/>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Available Syncs Panel -->
            <Border Grid.Column="4" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource MahApps.Brushes.Accent3}" Padding="10" CornerRadius="5,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Available Updates" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding AvailableSyncs.Count, StringFormat=' ({0})'}" 
                                       FontSize="14" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding AvailableSyncs}" 
                             SelectedItem="{Binding SelectedSyncItem}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="2" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding LocalGame.Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding LocalGame.BuildId}" Foreground="OrangeRed" FontSize="11"/>
                                            <TextBlock Text=" -> " FontSize="11"/>
                                            <TextBlock Text="{Binding RemoteGame.BuildId}" Foreground="LimeGreen" FontSize="11"/>
                                        </StackPanel>
                                        <TextBlock Grid.Row="2" Text="{Binding RemotePeer.DisplayName, StringFormat='From: {0}'}" 
                                                   Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11" Margin="0,2,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Sync Button -->
                    <Border Grid.Row="2" Padding="10" Background="{DynamicResource MahApps.Brushes.Gray9}">
                        <StackPanel>
                            <Button Command="{Binding StartSyncCommand}" 
                                    IsEnabled="{Binding SelectedSyncItem, Converter={StaticResource NullToBoolConverter}}"
                                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                                    Padding="15,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Sync Selected Game" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Transfer Progress -->
                            <StackPanel Visibility="{Binding IsTransferring, Converter={StaticResource BoolToVis}}" Margin="0,10,0,0">
                                <ProgressBar Value="{Binding CurrentTransferProgress}" Height="8" Minimum="0" Maximum="100"/>
                                <Grid Margin="0,5,0,0">
                                    <TextBlock Text="{Binding CurrentTransferFile}" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding CurrentTransferSpeed}" FontSize="11" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource MahApps.Brushes.Gray10}" Padding="15,8">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
        </Border>
    </Grid>
</mah:MetroWindow>
