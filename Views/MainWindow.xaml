<mah:MetroWindow x:Class="GamesLocalShare.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:vm="clr-namespace:GamesLocalShare.ViewModels"
        mc:Ignorable="d"
        Title="Games Local Share - LAN Game Sync" 
        Height="750" Width="1250"
        WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource MahApps.Brushes.Accent}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Step 1: Scan Games -->
                    <Border Background="#44000000" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                        <TextBlock Text="Step 1" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                    </Border>
                    <Button Command="{Binding ScanLocalGamesCommand}" 
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="#44FFFFFF"
                            Padding="15,8" Margin="0,0,20,0"
                            IsEnabled="{Binding IsScanning, Converter={StaticResource InvertBoolConverter}}">
                        <TextBlock Text="Scan My Games" VerticalAlignment="Center" Foreground="White"/>
                    </Button>

                    <!-- Step 2: Start Network -->
                    <Border Background="#44000000" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                        <TextBlock Text="Step 2" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                    </Border>
                    <Button Command="{Binding StartNetworkCommand}" 
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource InvertedBoolToVisConverter}}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="#44FFFFFF"
                            Padding="15,8" Margin="0,0,20,0">
                        <TextBlock Text="Start Network" VerticalAlignment="Center" Foreground="White"/>
                    </Button>

                    <Button Command="{Binding StopNetworkCommand}" 
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource BoolToVis}}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="#44FFFFFF"
                            Padding="15,8" Margin="0,0,20,0">
                        <TextBlock Text="Stop Network" VerticalAlignment="Center" Foreground="White"/>
                    </Button>

                    <!-- Step 3: Find Peers -->
                    <Border Background="#44000000" CornerRadius="3" Padding="5,2" Margin="0,0,5,0"
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Step 3" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                    </Border>
                    <Button Command="{Binding ScanForPeersCommand}" 
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource BoolToVis}}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="#44FFFFFF"
                            Padding="15,8" Margin="0,0,10,0"
                            IsEnabled="{Binding IsScanningPeers, Converter={StaticResource InvertBoolConverter}}">
                        <TextBlock Text="Scan for Peers" VerticalAlignment="Center" Foreground="White"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Your IP: " Foreground="White" Opacity="0.8"/>
                    <TextBlock Text="{Binding LocalIpAddress}" FontWeight="Bold" Foreground="White"/>
                    <Ellipse Width="12" Height="12" Margin="15,0,5,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Gray"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsNetworkActive}" Value="True">
                                        <Setter Property="Fill" Value="LimeGreen"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding IsNetworkActive, Converter={StaticResource BoolToOnlineConverter}}" 
                               VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Instructions Banner -->
        <Border Grid.Row="1" Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="15,10">
            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource MahApps.Brushes.Gray3}">
                <Run FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.Accent}">How to use:</Run>
                <Run> 1) Click "Scan My Games" to detect your Steam library</Run>
                <Run FontWeight="Bold"> |</Run>
                <Run> 2) Click "Start Network" to go online</Run>
                <Run FontWeight="Bold"> |</Run>
                <Run> 3) Click "Scan for Peers" or enter a peer's IP address to connect</Run>
                <Run FontWeight="Bold"> |</Run>
                <Run> 4) Select a game from "Available Updates" and click "Sync" to download newer files</Run>
            </TextBlock>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="280"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1.2*" MinWidth="350"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="280"/>
            </Grid.ColumnDefinitions>

            <!-- Panel 1: My Games -->
            <Border Grid.Column="0" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource MahApps.Brushes.Accent}" Padding="10" CornerRadius="5,5,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="1. My Games" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding LocalGames.Count, StringFormat=' ({0})'}" 
                                           FontSize="14" Foreground="White" Opacity="0.8"/>
                            </StackPanel>
                            <TextBlock Text="Your installed Steam games" FontSize="11" Foreground="White" Opacity="0.7" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding LocalGames}" 
                             SelectedItem="{Binding SelectedLocalGame}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="2" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="Build: " Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                            <TextBlock Text="{Binding BuildId}" FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,0,15,0"/>
                                            <TextBlock Text="{Binding FormattedSize}" Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding LocalGames.Count, Converter={StaticResource ZeroToVisConverter}}">
                        <TextBlock Text="No games found" FontSize="14" Foreground="{DynamicResource MahApps.Brushes.Gray3}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Click 'Scan My Games' above" FontSize="12" Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Loading indicator -->
                    <mah:ProgressRing Grid.Row="1" IsActive="{Binding IsScanning}" Width="50" Height="50"/>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Panel 2: Network Peers -->
            <Border Grid.Column="2" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource MahApps.Brushes.Accent2}" Padding="10" CornerRadius="5,5,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="2. Network Peers" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding NetworkPeers.Count, StringFormat=' ({0} online)'}" 
                                           FontSize="14" Foreground="White" Opacity="0.8"/>
                            </StackPanel>
                            <TextBlock Text="Other computers running this app on your network" FontSize="11" Foreground="White" Opacity="0.7" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Manual IP Connection -->
                    <Border Grid.Row="1" Padding="10" Background="{DynamicResource MahApps.Brushes.Gray9}">
                        <StackPanel>
                            <TextBlock Text="Can't find a peer? Enter their IP address directly:" 
                                       FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray3}" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding ManualPeerIp, UpdateSourceTrigger=PropertyChanged}" 
                                         mah:TextBoxHelper.Watermark="e.g., 192.168.1.100"
                                         Margin="0,0,10,0"
                                         VerticalContentAlignment="Center"
                                         IsEnabled="{Binding IsNetworkActive}"/>
                                <Button Grid.Column="1" 
                                        Command="{Binding ConnectToManualIpCommand}"
                                        Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                                        Padding="15,5"
                                        IsEnabled="{Binding IsNetworkActive}">
                                    <TextBlock Text="Connect" VerticalAlignment="Center"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="2" 
                             ItemsSource="{Binding NetworkPeers}" 
                             SelectedItem="{Binding SelectedPeer}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" Margin="2" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="10" Height="10" Fill="LimeGreen" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="13"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="18,4,0,0">
                                                <TextBlock Text="{Binding IpAddress}" Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="{DynamicResource MahApps.Brushes.Accent}" 
                                                CornerRadius="10" Padding="10,3" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Games.Count, StringFormat='{}{0} games'}" 
                                                       FontSize="11" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state / Scanning indicator -->
                    <Grid Grid.Row="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20"
                                    Visibility="{Binding NetworkPeers.Count, Converter={StaticResource ZeroToVisConverter}}">
                            <TextBlock Text="No peers found" FontSize="14" Foreground="{DynamicResource MahApps.Brushes.Gray3}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Make sure the app is running on another computer" 
                                       FontSize="12" Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                       HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,10"/>
                            <TextBlock FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                       HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap">
                                <Run FontWeight="Bold">Tips:</Run>
                                <LineBreak/>
                                <Run>- Both computers must be on the same network</Run>
                                <LineBreak/>
                                <Run>- Try clicking "Scan for Peers" button</Run>
                                <LineBreak/>
                                <Run>- Or enter the other PC's IP address above</Run>
                            </TextBlock>
                        </StackPanel>
                        
                        <mah:ProgressRing IsActive="{Binding IsScanningPeers}" Width="50" Height="50"/>
                    </Grid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Panel 3: Available Updates -->
            <Border Grid.Column="4" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource MahApps.Brushes.Accent3}" Padding="10" CornerRadius="5,5,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="3. Available Updates" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding AvailableSyncs.Count, StringFormat=' ({0})'}" 
                                           FontSize="14" Foreground="White" Opacity="0.8"/>
                            </StackPanel>
                            <TextBlock Text="Games you can update from peers" FontSize="11" Foreground="White" Opacity="0.7" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding AvailableSyncs}" 
                             SelectedItem="{Binding SelectedSyncItem}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" Margin="2" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding LocalGame.Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        
                                        <Border Grid.Row="1" Background="{DynamicResource MahApps.Brushes.Gray7}" 
                                                CornerRadius="3" Padding="8,5" Margin="0,6,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Your version: " Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                                <TextBlock Text="{Binding LocalGame.BuildId}" Foreground="OrangeRed" FontSize="11" FontWeight="Bold"/>
                                                <TextBlock Text="  >>>  " FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray5}"/>
                                                <TextBlock Text="New version: " Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                                <TextBlock Text="{Binding RemoteGame.BuildId}" Foreground="LimeGreen" FontSize="11" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="From: " Foreground="{DynamicResource MahApps.Brushes.Gray3}" FontSize="11"/>
                                            <TextBlock Text="{Binding RemotePeer.DisplayName}" FontSize="11"/>
                                            <TextBlock Text=" (" Foreground="{DynamicResource MahApps.Brushes.Gray5}" FontSize="11"/>
                                            <TextBlock Text="{Binding RemotePeer.IpAddress}" Foreground="{DynamicResource MahApps.Brushes.Gray5}" FontSize="11"/>
                                            <TextBlock Text=")" Foreground="{DynamicResource MahApps.Brushes.Gray5}" FontSize="11"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Row="3" Text="{Binding RemoteGame.FormattedSize, StringFormat='Size: {0}'}" 
                                                   Foreground="{DynamicResource MahApps.Brushes.Gray5}" FontSize="10" Margin="0,3,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20"
                                Visibility="{Binding AvailableSyncs.Count, Converter={StaticResource ZeroToVisConverter}}">
                        <TextBlock Text="No updates available" FontSize="14" Foreground="{DynamicResource MahApps.Brushes.Gray3}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Margin="0,8,0,0">
                            <Run>Updates appear here when a peer has</Run>
                            <LineBreak/>
                            <Run>a newer version of a game you own.</Run>
                            <LineBreak/>
                            <LineBreak/>
                            <Run FontWeight="Bold">To get updates:</Run>
                            <LineBreak/>
                            <Run>1. Connect to a peer</Run>
                            <LineBreak/>
                            <Run>2. If they have newer game versions,</Run>
                            <LineBreak/>
                            <Run>   they'll appear here automatically</Run>
                        </TextBlock>
                    </StackPanel>

                    <!-- Sync Button Area -->
                    <Border Grid.Row="2" Padding="10" Background="{DynamicResource MahApps.Brushes.Gray9}">
                        <StackPanel>
                            <Button Command="{Binding StartSyncCommand}" 
                                    IsEnabled="{Binding SelectedSyncItem, Converter={StaticResource NullToBoolConverter}}"
                                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                                    Padding="15,12"
                                    FontSize="13">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Download Update" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                            
                            <TextBlock Text="Select a game above, then click to download" 
                                       FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                       HorizontalAlignment="Center" Margin="0,5,0,0"
                                       Visibility="{Binding IsTransferring, Converter={StaticResource InvertedBoolToVisConverter}}"/>

                            <!-- Transfer Progress -->
                            <Border Visibility="{Binding IsTransferring, Converter={StaticResource BoolToVis}}" 
                                    Margin="0,10,0,0" Background="{DynamicResource MahApps.Brushes.Gray8}"
                                    CornerRadius="3" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="Downloading..." FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <ProgressBar Value="{Binding CurrentTransferProgress}" Height="10" Minimum="0" Maximum="100"/>
                                    <Grid Margin="0,5,0,0">
                                        <TextBlock Text="{Binding CurrentTransferFile}" FontSize="11" TextTrimming="CharacterEllipsis" 
                                                   Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding CurrentTransferProgress, StringFormat='{}{0:0}%'}" 
                                                       FontSize="11" FontWeight="Bold" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding CurrentTransferSpeed}" FontSize="11" 
                                                       Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource MahApps.Brushes.Gray10}" Padding="15,10">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource MahApps.Brushes.Gray3}" VerticalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Right" Foreground="{DynamicResource MahApps.Brushes.Gray5}" FontSize="11" VerticalAlignment="Center">
                    <Run Text="Games Local Share - Save bandwidth by syncing game updates over LAN"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
