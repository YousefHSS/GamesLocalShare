<mah:MetroWindow x:Class="GamesLocalShare.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:vm="clr-namespace:GamesLocalShare.ViewModels"
        xmlns:conv="clr-namespace:GamesLocalShare.Converters"
        xmlns:controls="clr-namespace:GamesLocalShare.Controls"
        mc:Ignorable="d"
        Title="Games Local Share - LAN Game Sync" 
        Height="700" Width="1200"
        MinHeight="500" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1"
        FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:StringToResourceConverter x:Key="StringToResourceConverter"/>
        <conv:GamePlatformToIconConverter x:Key="GamePlatformToIconConverter"/>
        <!-- Icons loaded from the Icons folder placed next to the app executable -->
        <DrawingImage x:Key="IconGames" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconPeers" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconUpdates" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconDownload" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconPause" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconWarning" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconCheck" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconWired" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconWifi" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconLog" Drawing="{x:Null}" />
        <!--<DrawingImage x:Key="IconSteam" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconEpic" Drawing="{x:Null}" />
        <DrawingImage x:Key="IconXbox" Drawing="{x:Null}" />-->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource MahApps.Brushes.Accent}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Step 1: Scan Games -->
                    <Border Background="#44000000" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                        <TextBlock Text="Step 1" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                    </Border>
                    <Button Command="{Binding ScanLocalGamesCommand}" 
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="#44FFFFFF"
                            Padding="15,8" Margin="0,0,20,0"
                            IsEnabled="{Binding IsScanning, Converter={StaticResource InvertBoolConverter}}">
                        <TextBlock Text="Scan My Games" VerticalAlignment="Center" Foreground="White"/>
                    </Button>

                    <!-- Step 2: Start Network -->
                    <Border Background="#44000000" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                        <TextBlock Text="Step 2" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                    </Border>
                    <Button Command="{Binding StartNetworkCommand}" 
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource InvertedBoolToVisConverter}}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="#44FFFFFF"
                            Padding="15,8" Margin="0,0,20,0">
                        <TextBlock Text="Start Network" VerticalAlignment="Center" Foreground="White"/>
                    </Button>

                    <Button Command="{Binding StopNetworkCommand}" 
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource BoolToVis}}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="#44FFFFFF"
                            Padding="15,8" Margin="0,0,20,0">
                        <TextBlock Text="Stop Network" VerticalAlignment="Center" Foreground="White"/>
                    </Button>

                    <!-- Step 3: Find Peers -->
                    <Border Background="#44000000" CornerRadius="3" Padding="5,2" Margin="0,0,5,0"
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Step 3" Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                    </Border>
                    <Button Command="{Binding ScanForPeersCommand}" 
                            Visibility="{Binding IsNetworkActive, Converter={StaticResource BoolToVis}}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="#44FFFFFF"
                            Padding="15,8" Margin="0,0,10,0"
                            IsEnabled="{Binding IsScanningPeers, Converter={StaticResource InvertBoolConverter}}">
                        <TextBlock Text="Scan for Peers" VerticalAlignment="Center" Foreground="White"/>
                    </Button>

                    <!-- Configure Firewall Button -->
                    <Button Command="{Binding ConfigureFirewallCommand}" 
                            Visibility="{Binding FirewallConfigured, Converter={StaticResource InvertedBoolToVisConverter}}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="#FFEF4444"
                            Padding="15,8" Margin="10,0,0,0"
                            FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"
                            ToolTip="Configure Windows Firewall to allow network communication">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image x:Name="ImageWarning" Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="⚠ Configure Firewall" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold"
                                       FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Your IP: " Foreground="White" Opacity="0.8"/>
                    <!-- Clickable IP address to copy -->
                    <Button Command="{Binding CopyLocalIpToClipboardCommand}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="2,0"
                            Cursor="Hand"
                            ToolTip="Click to copy IP address">
                        <TextBlock Text="{Binding LocalIpAddress}" FontWeight="Bold" Foreground="White" 
                                   TextDecorations="Underline"/>
                    </Button>
                    <Image x:Name="ImageWired" Width="20" Height="20" Margin="5,0,5,0" 
                           VerticalAlignment="Center"
                           ToolTip="Network Status - Click to toggle WiFi/Wired mode"/>
                    <Image x:Name="ImageWifi" Source="{DynamicResource IconWifi}" Width="20" Height="20" Margin="5,0,5,0" 
                           VerticalAlignment="Center"
                           ToolTip="Network Status - Click to toggle WiFi/Wired mode"/>
                    <TextBlock Text="{Binding IsNetworkActive, Converter={StaticResource BoolToOnlineConverter}}" 
                               VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Instructions Banner -->
        <Border Grid.Row="1" Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="15,10">
            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource MahApps.Brushes.Gray3}">
                <Run FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.Accent}">How to use:</Run>
                <Run> 1) Scan games</Run>
                <Run FontWeight="Bold"> |</Run>
                <Run> 2) Start network</Run>
                <Run FontWeight="Bold"> |</Run>
                <Run> 3) Find peers</Run>
                <Run FontWeight="Bold"> |</Run>
                <Run> 4) Download updates OR new games from peers</Run>
                <Run FontWeight="Bold"> |</Run>
                <Run FontStyle="Italic" Foreground="{DynamicResource MahApps.Brushes.Accent2}"> Incomplete downloads can be resumed!</Run>
            </TextBlock>
        </Border>

        <!-- Main Content - 4 Panels -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="220"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="220"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <!-- Panel 1: My Games -->
            <Border Grid.Column="0" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource MahApps.Brushes.Accent}" Padding="8" CornerRadius="5,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="ImageGames" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="My Games" FontSize="13" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding LocalGames.Count, StringFormat=' ({0})'}" 
                                        FontSize="13" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding LocalGames}" 
                             SelectedItem="{Binding SelectedLocalGame}"
                             Background="Transparent"
                             BorderThickness="0"
                             Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MahApps.Styles.ListBoxItem}">
                                <Setter Property="Tag" Value="{Binding Tag, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <!-- Fix MenuItem for Open Game Folder -->
                                            <MenuItem Header="Open Game Folder"
                                                      Command="{Binding PlacementTarget.Tag.OpenGameFolderCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"/>
                                            <Separator/>
                                            <MenuItem Header="Hide from Peers"
                                                      Command="{Binding PlacementTarget.Tag.HideGameFromPeersCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}">
                                                <MenuItem.Style>
                                                    <Style TargetType="MenuItem" BasedOn="{StaticResource MahApps.Styles.MenuItem}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHidden}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>
                                            <MenuItem Header="Unhide from Peers"
                                                      Command="{Binding PlacementTarget.Tag.UnhideGameFromPeersCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}">
                                                <MenuItem.Style>
                                                    <Style TargetType="MenuItem" BasedOn="{StaticResource MahApps.Styles.MenuItem}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHidden}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6" Margin="1" CornerRadius="3">
                                    <Grid>
                                        <!-- Background layer with gradient opacity -->
                                        <Border CornerRadius="3">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding CoverImage}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                            <Border.OpacityMask>
                                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                    <GradientStop Color="#00000000" Offset="0"/>
                                                    <GradientStop Color="#33000000" Offset="0.3"/>
                                                    <GradientStop Color="#DD000000" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.OpacityMask>
                                        </Border>
                                        
                                        <!-- Grey overlay on left side -->
                                        <Border CornerRadius="3">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                    <GradientStop Color="{DynamicResource MahApps.Colors.Gray8}" Offset="0"/>
                                                    <GradientStop Color="#88424242" Offset="0.3"/>
                                                    <GradientStop Color="#00000000" Offset="0.6"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- Content -->
                                        <StackPanel Margin="6">
                                            <StackPanel Orientation="Horizontal">
                                                <controls:OutlinedText Text="{Binding Name}"
                                                                       FontWeight="SemiBold"
                                                                       FontSize="12"
                                                                       Foreground="White"
                                                                       Stroke="#AA000000"
                                                                       StrokeThickness="3.2"
                                                                       SnapsToDevicePixels="True"
                                                                       UseLayoutRounding="True"/>
                                                <!-- Hidden indicator -->
                                                <Border Background="#FFEF4444" CornerRadius="2" Padding="4,1" Margin="5,0,0,0" 
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding IsHidden, Converter={StaticResource BoolToVis}}">
                                                    <TextBlock Text="HIDDEN" FontSize="8" FontWeight="Bold" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <controls:OutlinedText Text="{Binding BuildId}" 
                                                                       FontSize="10" 
                                                                       Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                                                       Stroke="#AA000000"
                                                                       StrokeThickness="2.5"
                                                                       SnapsToDevicePixels="True"
                                                                       UseLayoutRounding="True"/>
                                                <controls:OutlinedText Text=" - " 
                                                                       FontSize="10" 
                                                                       Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                                                                       Stroke="#AA000000"
                                                                       StrokeThickness="2.5"
                                                                       SnapsToDevicePixels="True"
                                                                       UseLayoutRounding="True"/>
                                                <controls:OutlinedText Text="{Binding FormattedSize}" 
                                                                       Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                                                       FontSize="10"
                                                                       Stroke="#AA000000"
                                                                       StrokeThickness="2.5"
                                                                       SnapsToDevicePixels="True"
                                                                       UseLayoutRounding="True"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding LocalGames.Count, Converter={StaticResource ZeroToVisConverter}}">
                        <TextBlock Text="No games found" FontSize="12" Foreground="{DynamicResource MahApps.Brushes.Gray3}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Click 'Scan My Games' above" FontSize="11" Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                   HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        <Button Command="{Binding ShowTroubleshootInfoCommand}"
                                Style="{DynamicResource MahApps.Styles.Button.Square}"
                                Padding="10,5" HorizontalAlignment="Center">
                            <TextBlock Text="Troubleshoot" FontSize="11"/>
                        </Button>
                    </StackPanel>

                    <mah:ProgressRing Grid.Row="1" IsActive="{Binding IsScanning}" Width="40" Height="40"/>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Panel 2: Network Peers & Available From Peers -->
            <Border Grid.Column="2" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource MahApps.Brushes.Accent2}" Padding="8" CornerRadius="5,5,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Image x:Name="ImagePeers" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Network Peers" FontSize="13" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding NetworkPeers.Count, StringFormat=' ({0})'}" 
                                           FontSize="13" Foreground="White" Opacity="0.8"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding TestConnectionToPeerCommand}"
                                        Style="{DynamicResource MahApps.Styles.Button.Square}"
                                        Background="Transparent"
                                        Padding="8,2"
                                        Margin="0,0,5,0"
                                        ToolTip="Test connection to selected peer (both ports)">
                                    <TextBlock Text="Test" FontSize="11" Foreground="White"/>
                                </Button>
                                <Button Command="{Binding RefreshAllPeersCommand}"
                                        Style="{DynamicResource MahApps.Styles.Button.Square}"
                                        Background="Transparent"
                                        Padding="8,2"
                                        ToolTip="Refresh game lists from all peers">
                                    <TextBlock Text="Refresh" FontSize="11" Foreground="White"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Manual IP -->
                    <Border Grid.Row="1" Padding="8" Background="{DynamicResource MahApps.Brushes.Gray9}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding ManualPeerIp, UpdateSourceTrigger=PropertyChanged}" 
                                     mah:TextBoxHelper.Watermark="IP address (e.g., 192.168.0.100)"
                                     Margin="0,0,5,0" FontSize="11"
                                     VerticalContentAlignment="Center"
                                     IsEnabled="{Binding IsNetworkActive}"/>
                            <Button Grid.Column="1" 
                                    Command="{Binding ConnectToManualIpCommand}"
                                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                                    Padding="10,3" FontSize="11"
                                    Margin="0,0,5,0"
                                    IsEnabled="{Binding IsNetworkActive}">
                                <TextBlock Text="Connect"/>
                            </Button>
                            <Button Grid.Column="2" 
                                    Command="{Binding RunNetworkDiagnosticCommand}"
                                    Style="{DynamicResource MahApps.Styles.Button.Square}"
                                    Background="#FFEF4444"
                                    Padding="8,3" FontSize="10"
                                    FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"
                                    ToolTip="Diagnose connection issues with this IP">
                                <TextBlock Text="⚠" Foreground="White"
                                           FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Peers List -->
                    <ListBox Grid.Row="2" 
                             ItemsSource="{Binding NetworkPeers}" 
                             SelectedItem="{Binding SelectedPeer}"
                             Background="Transparent"
                             BorderThickness="0"
                             Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MahApps.Styles.ListBoxItem}">
                                <Setter Property="Tag" Value="{Binding Tag, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <MenuItem Header="Copy IP Address"
                                                      Command="{Binding PlacementTarget.Tag.CopyPeerIpCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"/>
                                            <MenuItem Header="Test Connection"
                                                      Command="{Binding PlacementTarget.Tag.TestConnectionToPeerCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"/>
                                            <MenuItem Header="⚠ Diagnose Connection Issues"
                                                      Command="{Binding PlacementTarget.Tag.RunNetworkDiagnosticCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"/>
                                            <Separator/>
                                            <MenuItem Header="Refresh Games"
                                                      Command="{Binding PlacementTarget.Tag.RefreshPeerGamesCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6" Margin="1" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <Image x:Name="ImageWired" Width="12" Height="12" Margin="15,0,5,0" Source="{Binding NetworkIconKey, Converter={StaticResource StringToResourceConverter}}" />
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="12"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding IpAddress}" Foreground="{DynamicResource MahApps.Brushes.Gray5}" FontSize="10" Margin="13,0,0,0"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="{DynamicResource MahApps.Brushes.Accent}" 
                                                CornerRadius="8" Padding="6,2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Games.Count}" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- New Games Available Header -->
                    <Border Grid.Row="3" Background="#FF8B5CF6" Padding="8">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="ImageDownload" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="New Games from Peers" FontSize="12" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding AvailableFromPeers.Count, StringFormat=' ({0})'}" 
                                       FontSize="12" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <!-- New Games List -->
                    <ListBox Grid.Row="4" 
                             ItemsSource="{Binding AvailableFromPeers}" 
                             SelectedItem="{Binding SelectedPeerGame}"
                             Background="Transparent"
                             BorderThickness="0"
                             Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MahApps.Styles.ListBoxItem}">
                                <Setter Property="Tag" Value="{Binding Tag, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <MenuItem Header="Download Game"
                                                      Command="{Binding PlacementTarget.Tag.DownloadNewGameCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6" Margin="1" CornerRadius="3">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding CoverImage}" Stretch="UniformToFill" Opacity="0.12"/>
                                    </Border.Background>
                                    <Grid>
                                        <Border Background="{DynamicResource MahApps.Brushes.Gray8}" Opacity="0.92" CornerRadius="3"/>
                                        <StackPanel Margin="6">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding FormattedSize}" Foreground="{DynamicResource MahApps.Brushes.Gray5}" FontSize="10"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <mah:ProgressRing Grid.Row="2" IsActive="{Binding IsScanningPeers}" Width="40" Height="40"/>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Panel 3: Available Updates -->
            <Border Grid.Column="4" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource MahApps.Brushes.Accent3}" Padding="8" CornerRadius="5,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="ImageUpdates" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Updates Available" FontSize="13" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding AvailableSyncs.Count, StringFormat=' ({0})'}" 
                                       FontSize="13" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding AvailableSyncs}" 
                             SelectedItem="{Binding SelectedSyncItem}"
                             Background="Transparent"
                             BorderThickness="0"
                             Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MahApps.Styles.ListBoxItem}">
                                <Setter Property="Tag" Value="{Binding Tag, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <MenuItem Header="Download Update"
                                                      Command="{Binding PlacementTarget.Tag.StartSyncCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="1" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                        <Border Background="{DynamicResource MahApps.Brushes.Gray7}" CornerRadius="3" Padding="6,3" Margin="0,4,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding LocalGame.BuildId}" Foreground="OrangeRed" FontSize="10" FontWeight="Bold"/>
                                                <TextBlock Text=" ? " FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray5}"/>
                                                <TextBlock Text="{Binding RemoteGame.BuildId}" Foreground="LimeGreen" FontSize="10" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>
                                        <TextBlock Text="{Binding RemotePeer.DisplayName, StringFormat='From: {0}'}" 
                                                   Foreground="{DynamicResource MahApps.Brushes.Gray5}" FontSize="10" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"
                                Visibility="{Binding AvailableSyncs.Count, Converter={StaticResource ZeroToVisConverter}}">
                        <TextBlock Text="No updates" FontSize="12" Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Connect to peers to check for updates" FontSize="10" 
                                   Foreground="{DynamicResource MahApps.Brushes.Gray5}" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Border Grid.Row="2" Padding="8" Background="{DynamicResource MahApps.Brushes.Gray9}">
                        <StackPanel>
                            <Button Command="{Binding StartSyncCommand}" 
                                    IsEnabled="{Binding SelectedSyncItem, Converter={StaticResource NullToBoolConverter}}"
                                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                                    Padding="10,8" Margin="0,0,0,5">
                                <TextBlock Text="Download Update" FontWeight="SemiBold"/>
                            </Button>
                            
                            <Button Command="{Binding DownloadNewGameCommand}" 
                                    IsEnabled="{Binding SelectedPeerGame, Converter={StaticResource NullToBoolConverter}}"
                                    Style="{StaticResource MahApps.Styles.Button.Square}"
                                    Background="#FF8B5CF6"
                                    Padding="10,8">
                                <!-- add xmlns at top of the XAML root: xmlns:controls="clr-namespace:GamesLocalShare.Controls" -->
<controls:OutlinedText Text="Download New Game"
                       FontSize="12"
                       FontFamily="Segoe UI"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Stroke="#1F000000"
                       StrokeThickness="1.6"
                       SnapsToDevicePixels="True"
                       UseLayoutRounding="True"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                            </Button>

                            <!-- Progress -->
                            <Border Visibility="{Binding IsTransferring, Converter={StaticResource BoolToVis}}" 
                                    Margin="0,8,0,0" Background="{DynamicResource MahApps.Brushes.Gray8}"
                                    CornerRadius="3" Padding="8">
                                <StackPanel>
                                    <TextBlock Text="{Binding CurrentTransferGameName}" FontWeight="SemiBold" FontSize="11" 
                                               Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,0,0,4"/>
                                    <ProgressBar Value="{Binding CurrentTransferProgress}" Height="8" Minimum="0" Maximum="100"/>
                                    
                                    <!-- File name on its own line -->
                                    <TextBlock Text="{Binding CurrentTransferFile}" FontSize="9" TextTrimming="CharacterEllipsis" 
                                               Foreground="{DynamicResource MahApps.Brushes.Gray5}" Margin="0,4,0,0"/>
                                    
                                    <!-- Speed and Time Remaining on one line -->
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Speed - clickable to toggle units -->
                                        <Button Grid.Column="0"
                                                Command="{Binding ToggleSpeedUnitCommand}"
                                                HorizontalAlignment="Left"
                                                Style="{DynamicResource MahApps.Styles.Button.Square}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand"
                                                ToolTip="Click to toggle between MB/s and Mbps">
                                            <TextBlock Text="{Binding CurrentTransferSpeed}" FontSize="12"
                                                       Foreground="{DynamicResource MahApps.Brushes.Accent}" FontWeight="Bold"/>
                                        </Button>
                                        
                                        <!-- Time Remaining -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding CurrentTransferTimeRemaining, StringFormat='ETA: {0}'}" 
                                                   FontSize="11"
                                                   Foreground="{DynamicResource MahApps.Brushes.Gray4}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                                    </Grid>
                                    
                                    <!-- Pause/Stop buttons -->
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Command="{Binding PauseTransferCommand}"
                                                Style="{DynamicResource MahApps.Styles.Button.Square}"
                                                Background="#FFF59E0B"
                                                Padding="8,4" Margin="0,0,3,0">
                                            <TextBlock Text="Pause" FontSize="10" Foreground="White"/>
                                        </Button>
                                        <Button Grid.Column="1" Command="{Binding StopTransferCommand}"
                                                Style="{DynamicResource MahApps.Styles.Button.Square}"
                                                Background="#FFEF4444"
                                                Padding="8,4" Margin="3,0,0,0">
                                            <TextBlock Text="Stop" FontSize="10" Foreground="White"/>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="5" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Panel 4: Incomplete Downloads -->
            <Border Grid.Column="6" Margin="10" Background="{DynamicResource MahApps.Brushes.Gray10}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Background="#FFEF4444" Padding="8" CornerRadius="5,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="ImagePause" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Incomplete" FontSize="13" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding IncompleteTransfers.Count, StringFormat=' ({0})'}" 
                                        FontSize="13" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding IncompleteTransfers}" 
                             SelectedItem="{Binding SelectedIncompleteTransfer}"
                             Background="Transparent"
                             BorderThickness="0"
                             Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MahApps.Styles.ListBoxItem}">
                                <Setter Property="Tag" Value="{Binding Tag, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <MenuItem Header="Resume Download"
                                                      Command="{Binding PlacementTarget.Tag.ResumeTransferCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <Separator/>
                                            <MenuItem Header="Delete Incomplete Transfer"
                                                      Command="{Binding PlacementTarget.Tag.DeleteIncompleteTransferCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="1" Background="{DynamicResource MahApps.Brushes.Gray8}" CornerRadius="3">
                                    <StackPanel>
                                        <TextBlock Text="{Binding GameName}" FontWeight="SemiBold" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                        <ProgressBar Value="{Binding ProgressPercent, Mode=OneWay}" Height="6" Minimum="0" Maximum="100" Margin="0,4,0,0"/>
                                        <Grid Margin="0,3,0,0">
                                            <TextBlock Text="{Binding FormattedProgress}" FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                                            <TextBlock Text="{Binding SourcePeerName, StringFormat='From: {0}'}" 
                                                       FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray5}" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"
                                Visibility="{Binding IncompleteTransfers.Count, Converter={StaticResource ZeroToVisConverter}}">
                        <TextBlock Text="No incomplete downloads" FontSize="12" Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Interrupted downloads appear here" FontSize="10" 
                                   Foreground="{DynamicResource MahApps.Brushes.Gray5}" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                    </StackPanel>

                    <Border Grid.Row="2" Padding="8" Background="{DynamicResource MahApps.Brushes.Gray9}">
                        <Button Command="{Binding ResumeTransferCommand}" 
                                Style="{DynamicResource MahApps.Styles.Button.Square}"
                                Background="#FFEF4444"
                                Padding="10,8">
                            <TextBlock Text="Resume Download" FontWeight="SemiBold" Foreground="White"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource MahApps.Brushes.Gray10}" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource MahApps.Brushes.Gray3}" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Settings Button -->
                    <Button Command="{Binding OpenSettingsCommand}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="{DynamicResource MahApps.Brushes.Gray8}"
                            Width="85" Height="24"
                            Margin="0,0,10,0"
                            FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"
                            ToolTip="Open Settings - Configure startup, auto-update, and hidden games">
                        <TextBlock Text="⚙ Settings" FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                   FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"/>
                    </Button>
                    
                    <!-- Network Info Button -->
                    <Button Command="{Binding QuickSubnetCheckCommand}"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="{DynamicResource MahApps.Brushes.Gray8}"
                            Width="85" Height="24"
                            Margin="0,0,10,0"
                            FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"
                            ToolTip="View your network interfaces and subnet information">
                        <TextBlock Text="🌐 Net Info" FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                                   FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"/>
                    </Button>
                    
                    <!-- High Speed Mode Toggle - improved styling -->
                    <ToggleButton Command="{Binding ToggleHighSpeedModeCommand}"
                                  IsChecked="{Binding HighSpeedMode, Mode=OneWay}"
                                  Style="{DynamicResource MahApps.Styles.ToggleButton.Square}"
                                  Background="{DynamicResource MahApps.Brushes.Gray8}"
                                  Width="85" Height="24"
                                  Margin="0,0,10,0"
                                  ToolTip="Toggle between WiFi mode (smaller buffers) and High-Speed mode (larger buffers for wired connections)">
                        <TextBlock Text="{Binding HighSpeedMode, Converter={StaticResource BoolToSpeedModeConverter}}" 
                                   FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray2}"/>
                    </ToggleButton>
                    
                    <TextBlock Text="Games Local Share" Foreground="{DynamicResource MahApps.Brushes.Gray5}" FontSize="10" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <!-- Log Toggle Button - improved styling -->
                    <ToggleButton x:Name="LogToggle" 
                                  Style="{DynamicResource MahApps.Styles.ToggleButton.Square}"
                                  Background="{DynamicResource MahApps.Brushes.Gray8}"
                                  Width="70" Height="24"
                                  ToolTip="Show/Hide Activity Log">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image x:Name="ImageLog" Width="14" Height="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Log" FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray2}"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log Panel (Popup) -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MahApps.Brushes.Gray9}" 
                CornerRadius="5"
                Margin="10,0,10,10"
                Padding="10"
                VerticalAlignment="Bottom"
                MaxHeight="200"
                Visibility="{Binding IsChecked, ElementName=LogToggle, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <TextBlock Text="Activity Log" FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                    <Button Command="{Binding ClearLogCommand}"
                            HorizontalAlignment="Right"
                            Style="{DynamicResource MahApps.Styles.Button.Square}"
                            Background="Transparent"
                            Padding="5,2"
                            ToolTip="Clear log">
                        <TextBlock Text="Clear" FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Gray5}"/>
                    </Button>
                </Grid>
                
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding LogMessages}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <TextBlock Text="{Binding FormattedTime}" 
                                           Foreground="{DynamicResource MahApps.Brushes.Gray5}" 
                                           FontSize="10" 
                                           Width="55"
                                           FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"/>
                                <TextBlock Text="{Binding TypeIcon}" 
                                           Foreground="{Binding TypeColor}" 
                                           FontSize="10" 
                                           Width="20"
                                           FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"
                                           TextOptions.TextFormattingMode="Display"/>
                                <TextBlock Text="{Binding Message}" 
                                           Foreground="{DynamicResource MahApps.Brushes.Gray3}" 
                                           FontSize="10"
                                           TextTrimming="CharacterEllipsis"
                                           FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
