<Window x:Class="GamesLocalShare.Views.DiagnosticReportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Diagnostic Report"
        Height="600" Width="800"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="{DynamicResource MahApps.Brushes.Gray10}"
        FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Report Content -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MahApps.Brushes.Gray9}" 
                BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="ReportTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"
                         FontSize="11"
                         Foreground="{DynamicResource MahApps.Brushes.Gray2}"
                         VerticalScrollBarVisibility="Disabled"
                         HorizontalScrollBarVisibility="Disabled"
                         TextOptions.TextFormattingMode="Display"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="CopyButton"
                    Content="Copy to Clipboard" 
                    Width="140" 
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Click="CopyButton_Click"/>
            <Button Content="Close" 
                    Width="80" 
                    Padding="10,5"
                    Click="CloseButton_Click"
                    IsDefault="True"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
